/* pages/check/check.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.seat-input {
  text-align: center;
  width: 100%;
  padding: 10rpx 20rpx;
  border-bottom: 2rpx solid #1AAD19;
}
.btn-group {
  width: 100%;
  margin-top: 40rpx;
  display: flex;
  justify-content: space-evenly;
}
.btn-group button {
  width: 300rpx;
}
image {
  width: 376rpx;
  height: 536rpx;
  margin-top: 20rpx;
  margin-left: 82rpx;
}
.logs {
  padding-top: 20rpx;
  flex: 1;
  color: gray;
}
.red {
  color: #d84e43;
}
.start-btn {
  width: 100%;
}

/* 自定义弹窗样式 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 30%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 10rpx;
}

.modal-title {
  padding-top: 20rpx;
  font-size: 30rpx;
  color: #030303;
  text-align: center;
}

